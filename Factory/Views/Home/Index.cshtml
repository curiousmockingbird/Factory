@{
  Layout = "_Layout";
}
@using Factory.Models;

<div class="container">
  <div class="row">
    <h1>Welcome to your MVC Factory page!</h1>
  </div>
  <div class="row">
  <div class="col-6">
    <h2>Machines:</h2>
    @if (ViewBag.Machine.Count == 0)
    {
      <h3>No machines have been added yet!</h3>
      <p>@Html.ActionLink(">> Add new machine", "Create", "Machines")</p>
    }
    else
    {
      <ul>
      @foreach (Machine machine in ViewBag.Machine)
      {
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</p>
      }
      <p>@Html.ActionLink(">> Add new machine", "Create", "Machines")</p>
      </ul>
    }
    
  </div>

  <div class="col-6">
    <h2>Engineers:</h2>
    @if (@Model.Count == 0)
    {
      <h3>No engineers have been added yet!</h3>
      <p>@Html.ActionLink(">> Add new engineer", "Create", "Engineers")</p>

    }
    else
    {
      <ul>
      @foreach (Engineer engineer in Model)
      {
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</p>
      }
      <p>@Html.ActionLink(">> Add new engineer", "Create", "Engineers")</p>
      </ul>

    }
    
  </div>
  </div>
</div>