@{
  Layout = "_Layout";
}
@using Factory.Models;
@model Factory.Models.Engineer

<div class="container">
<h2>Engineer details:</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.Name)</h3>

<h3>Working since: @Html.DisplayFor(model => model.WorkingSince)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer hasn't been assigned to any machine yet!</p>
}
else
{
  <h4>Machines assigned to this engineer:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.Name</li>
  }
  </ul>
  <p>@Html.ActionLink("Delete engineer from database", "Delete", new { id = Model.EngineerId })</p>
  <hr />
}

<p>@Html.ActionLink("Delete assigned machines", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Assign to another machine", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back to list of engineers", "Index")</p>
</div>