@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="container">
<h2>Assign another machine to this engineer</h2>

<h4>Engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Assign to another machine: ")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back to list of engineers", "Index")</p>
</div>
